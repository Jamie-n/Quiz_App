<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="640" prefWidth="1024" stylesheets="@OptionStyle.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quizApp.optionScene.OptionController">
    <Button fx:id="startButton" layoutX="365.0" layoutY="520.0" mnemonicParsing="false" onAction="#startQuiz" prefHeight="72" prefWidth="290" text="Start Quiz" />
   <Button fx:id="backButton" layoutX="8.0" layoutY="7.0" mnemonicParsing="false" onAction="#backToMenu" prefHeight="25.0" prefWidth="80.0" text="Back" />
   <ListView fx:id="categoryList" layoutX="113.0" layoutY="90.0" prefHeight="394.0" prefWidth="575.0" />
   <AnchorPane fx:id="customPane" layoutX="730.0" layoutY="371.0" prefHeight="113.0" prefWidth="171.0">
      <children>
         <Button fx:id="incrementButton" layoutX="37.0" layoutY="35.0" mnemonicParsing="false" onAction="#incrementLabel" text="^" />
         <Button fx:id="decrementButton" layoutX="37.0" layoutY="66.0" mnemonicParsing="false" onAction="#decrementLabel" prefHeight="25.0" prefWidth="25.0" text="v" />
         <Label fx:id="incrementLabel" layoutX="70.0" layoutY="35.0" prefHeight="57.0" prefWidth="65.0" text="0" textAlignment="CENTER">
            <font>
               <Font name="Baskerville Old Face" size="23.0" />
            </font>
         </Label>
         <Label fx:id="maxLabel" layoutY="-2.0" prefHeight="25.0" prefWidth="171.0" text="Questions (Max 25)" textFill="WHITE">
            <font>
               <Font name="System Bold Italic" size="12.0" />
            </font>
         </Label>
      </children>
   </AnchorPane>
   <ComboBox fx:id="difficultyCmbox" layoutX="730.0" layoutY="291.0" prefHeight="25.0" prefWidth="171.0" promptText="No selection" />
   <Label fx:id="difficultyLabel" layoutX="730.0" layoutY="266.0" prefHeight="25.0" prefWidth="171.0" text="Choose Difficulty" textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font>
   </Label>
   <Label fx:id="catagoryLabel" layoutX="113.0" layoutY="65.0" prefHeight="25" prefWidth="575.0" text="Choose Category" textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font>
   </Label>
</AnchorPane>
